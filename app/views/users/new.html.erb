<%= form_for @user do |f| %>
  Username:</br><%= f.text_field :username, placeholder: "Your username" %></br>
  Email:</br> <%= f.text_field :email, placeholder: "example@example.com" %></br>
  Password:</br> <%= f.text_field :password, placeholder: "Your password" %></br>
  </br><%= f.submit 'Submit'%></br>
<% end %>



